<div id='carousel'>
	<div class='selectarea horizontal'>
		<ul>
			{{#projects}}
			<li class='scroll-item'>
				<img src="/images/{{mainImage}}" />
			</li>
			{{/projects}}
		</ul>
	</div>
	<nav>
		<div class='selectbutton previous'>&lt;&lt;</div>
		<div class='selectbar horizontal'>
			<div class='handle'></div>
		</div>
		<div class='selectbutton next'>&gt;&gt;</div>
	</nav>
	<div class='selectcontent'>
		{{#projects}}
		<article>
			{{#content}}
				{{>article}}
			{{/content}}
			<div class="clearfix"></div>
		</article>
		{{/projects}}
	</div>
</div>
