<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/base.css' media="all" />
    <link rel='stylesheet' href='/stylesheets/720_grid.css' media="screen and (min-width: 720px)" />
    <link rel='stylesheet' href='/stylesheets/986_grid.css'  media="screen and (min-width: 986px)" />
    <!--<link rel='stylesheet' href='/stylesheets/1236_grid.css'  media="screen and (min-width: 1236px)" />-->
    <link rel='stylesheet' href='/stylesheets/style.css' />
	<link href='http://fonts.googleapis.com/css?family=Lobster|Cabin' rel='stylesheet' type='text/css'>
	<!--<script>
		// require js config
		var require = {
			shim: {
				'underscore': { exports: '_' }
			}
		};
	</script>
	<script data-main="/javascripts/index" src="/javascripts/require.js"></script>-->
  </head>
  <body>
	<!-- TODO: Move header and nav into a partial -->
	<header>
		<h1 class='grid'>Welcome to <em>{{ title }}</em></h1>
	</header>
	<nav>
		<ul>
			<li>Home</li>
			<li>Portfolio</li>
			<li>About Me</li>
		</ul>
	</nav>
	<section id='projects'>
		{{#projects}}
		<article class='grid {{ sectionClassNames }}'>
			{{#rows}}
			<div class='row'>
				{{#content}}

					{{#type.h1}}
						<h1 class='{{ classNames }}'>{{ text }}</h1>
					{{/type.h1}}

					{{#type.h2}}
						<h2 class='{{ classNames }}'>{{ text }}</h2>
					{{/type.h2}}

					{{#type.h3}}
						<h3 class='{{ classNames }}'>{{ text }}</h3>
					{{/type.h3}}

					{{#type.paragraph}}
						<p class='{{ classNames }}'>{{ text }}</p>
					{{/type.paragraph}}

					{{#type.image}}
						 <img class='{{ classNames }}' src='images/{{ src }}' alt='{{ description }}' title='{{ description }}' />
					{{/type.image}}

					{{#type.definitionList}}
						<aside class='{{ classNames }}'>
							<dl>
								{{#list}}
								<dt>{{ term }}</dt>
								<dd>{{ definition }}</dd>
								{{/list}}
							</dl>
						</aside>
					{{/type.definitionList}}

					{{#type.stringList}}
						<ul class='{{ classNames }}'>
							{{#list}}
							<li>{{ . }}</li>
							{{/list}}
						</ul>
					{{/type.stringList}}

				{{/content}}
			</div>
			{{/rows}}
		</article>
		{{/projects}}
	</section>
  </body>
</html>